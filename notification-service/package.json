{
  "name": "task-manager",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "node dist/server.js",
    "create:db": "node dist/init/createDatabase.js",
    "build": "tsc",
    "dev": "nodemon src/server.ts",
    "dev:docker": "npx nodemon --watch src --ext ts --exec 'npm run build && node dist/server.js'",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/config/Db.config.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/migrations/$npm_config_name",
    "migrate": "typeorm-ts-node-commonjs migration:run -d ./src/config/Db.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/config/Db.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/amqplib": "^0.10.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "amqplib": "^0.10.5",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^5.16.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "ws": "^8.18.0"
  }
